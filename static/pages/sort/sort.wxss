.list image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.list {
  display: flex;
  flex-direction: row;
  margin: 0 30rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list_right {
  color: #a6a6a6;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #212121;
  margin: 20rpx 0 26rpx 0;
}

.number {
  margin-top: 55rpx;
  text-align: right;
}

.load {
  font-size: 24rpx;
  color: #dadada;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.text_hidden {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 440rpx;
}
